<h1 class="pet-index">All pets</h1>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<%= link_to "Start an Application", "/applications/new", class: 'start-link' %>
<% end %>

<table class="table-style">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Adoptable</th>
      <th>Where?</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @pets.each do |pet| %>
    <tr>
    <td><%= pet.name %></td>
    <td><%= pet.age %></td>
    <td><%= pet.breed %></td>
    <td><%= pet.adoptable %></td>
    <td>You can find <%= pet.name %> at <%= pet.shelter_name %>!</td>
    <td><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %></td>
    <td><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>